@model GetDiaryViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Показать дневник погоды</h1>
    <p>Выберите дневник, который хотите посмотреть</p>
    <br><br>
    <form method="post" action="~/Diary/Get">
        <table class="left_table">
            @foreach (var item in Model.Citys)
             {
                <tr>
                    <td>
                        <input type="radio" name="city" value="@item" />
                    </td>
                    <td class="text_enumeration">
                        <div>@item.ToString()</div>
                    </td>
                </tr>
             }
        </table>
        <table class="right_table">
            @foreach (var item in Model.WeatherСonditions)
            {
                <tr>
                    <td vertical-align: central>
                        <div>
                            <input type="checkbox" name="city" value="@item" />
                        </div>
                    </td>
                    <td class="text_enumeration">
                        <div>@item.ToString()</div>
                    </td>
                </tr>
             }
        </table>
        <br><br><br><br>
        <input type="submit" value="Показать дневник" />
    </form>
</div>
